@page "/notifications"
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<style>
    .notifications-container {
        padding: 20px;
        max-width: 700px;
        margin: 0 auto;
        font-family: 'Arial', sans-serif;
        color: #BFCFE7;
    }

    .notifications-container h2 {
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        color: #444;
        margin-bottom: 20px;
        border-bottom: 2px solid #eaeaea;
        padding-bottom: 10px;
    }

    .notification-card {
        background: linear-gradient(135deg, #FFF7FC, #f9f9f9);
        border-radius: 16px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        display: flex;
        align-items: flex-start;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .notification-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
    }

    .notification-icon {
        flex-shrink: 0;
        width: 50px;
        height: 50px;
        background-color: #77CDFF;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 20px;
        margin-right: 20px;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
    }

    .notification-content {
        flex-grow: 1;
    }

    .notification-title {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 6px;
        color: #333;
    }

    .notification-message {
        font-size: 16px;
        color: #555;
        margin-bottom: 6px;
    }

    .notification-time {
        font-size: 14px;
        color: #888;
        text-align: right;
    }



        .notification-icon {
            margin-bottom: 10px;
        }

        .notification-time {
            text-align: center;
        }
    }
</style>

<div class="notifications-container">
    <h2>Notifications</h2>

    <div class="notification-card">
        <div class="notification-icon">
            <i class="fas fa-envelope"></i>
        </div>
        <div class="notification-content">
            <div class="notification-title">New Message</div>
            <div class="notification-message">You have received a new message from Bruce Wayne.</div>
            <div class="notification-time">Just Now</div>
        </div>
    </div>

    <div class="notification-card">
        <div class="notification-icon" style="background-color: #1DCD9F;">
            <i class="fas fa-check-circle"></i>
        </div>
        <div class="notification-content">
            <div class="notification-title">System Update</div>
            <div class="notification-message">A new update has been installed successfully.</div>
            <div class="notification-time">1 hour ago</div>
        </div>
    </div>

    <div class="notification-card">
        <div class="notification-icon" style="background-color: #D91656;">
            <i class="fas fa-bell"></i>
        </div>
        <div class="notification-content">
            <div class="notification-title">Reminder</div>
            <div class="notification-message">You have a scheduled meeting in 10 minutes.</div>
            <div class="notification-time">5 minutes ago</div>
        </div>
    </div>
</div>